<?xml version='1.0' encoding='utf-8'?>
<widget id="nzilbb.elicitspeechweb" version="0.3.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Elicit Speech</name>
    <description>
        A speech sample elicitation app.
    </description>
    <author email="robert.fromont@canterbury.ac.nz" href="http://www.nzilbb.canterbury.ac.nz">
        New Zealand Institute of Language, Brain and Behaviour
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="prerendered-icon" value="false" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <icon src="www/img/icon.png" />
    <platform name="android">
      <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash height="480" src="res/ios/Default.png" width="320" />
        <splash height="960" src="res/ios/Default.png" width="640" />
        <splash height="1024" src="res/ios/Default-Portrait.png" width="768" />
        <splash height="2048" src="res/ios/Default-Portrait@2x.png" width="1536" />
        <splash height="1136" src="res/ios/Default-568h@2x.png" width="640" />
        <splash height="1334" src="res/ios/Default-667h@2x.png" width="750" />
        <splash height="2208" src="res/ios/Default-Portrait-736h@3x.png" width="1242" />
        <splash height="1536" src="res/ios/Default-Landscape@2x.png" width="2048" />
        <splash height="1242" src="res/ios/Default-Portrait-736h@3x.png" width="2208" />
        <icon height="180" src="res/ios/appicon-60@3x.png" width="180" />
        <icon height="60" src="res/ios/appicon-60.png" width="60" />
        <icon height="120" src="res/ios/appicon-60@2x.png" width="120" />
        <icon height="57" src="res/ios/appicon.png" width="57" />
        <icon height="114" src="res/ios/appicon@2x.png" width="114" />
        <icon height="72" src="res/ios/appicon-72.png" width="72" />
        <icon height="144" src="res/ios/appicon-72@2x.png" width="144" />
        <icon height="29" src="res/ios/appicon-Small.png" width="29" />
        <icon height="58" src="res/ios/appicon-Small@2x.png" width="58" />
    </platform>
</widget>
