<?xml version='1.0' encoding='utf-8'?>
<widget id="nzilbb.elicitspeechweb" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Elicit Speech</name>
    <description>
        A speech sample elicitation app.
    </description>
    <author email="robert.fromont@canterbury.ac.nz" href="http://www.nzilbb.canterbury.ac.nz">
        New Zealand Institute of Language, Brain and Behaviour
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="prerendered-icon" value="false" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <icon src="www/img/icon.png" />
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:icon="@mipmap/ic_launcher" android:roundIcon="@mipmap/ic_launcher_round" />
